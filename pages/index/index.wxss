/* pages/index/index.wxss */

page {
  height: 100%;
  color: #333;
  font-weight: 300;
  background: #f5f5f9;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.head {
  width: 100%;
  height: 100rpx;
  background: #4caf50;
  box-sizing: border-box;
  transition: all .3s;
  flex-shrink: 0;
  position: relative;
}
.head .inputer {
  width: 500rpx;
  height: 60rpx;
  background: #fff;
  font-size: 28rpx;
  margin: 0 auto;
  border-radius: 100rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.head text.placeholder {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s;
}
.head text.placeholder.focus {
  opacity: 0;
}
.head input {
  color: #333;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: absolute;
  z-index: 88;
  transition: all 0.3s;
}

.head.full {
  height: 100%;
  font-weight: 400;
}
.head.full .inputer {
  height: 70rpx;
  background: none;
  border-radius: 0;
  border-bottom: 2px solid #fff;
  top: 35%;
}
.head.full text.placeholder, .head.full input {
  color: #fff;
  font-size: 40rpx;
}

.body {
  height: 100%;
  flex-grow: 1;
  overflow-y: scroll;
}
.list {
  background: #fff;
}
.list .item {
  padding: 0 15px;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
   position: relative; 
}
.list .item::after {
  position: absolute;
  content: '';
  width: 100%;
  left: 0;
  bottom: 0;
  height: 1px;
  background: #eaf0f4;
  transform: scaleY(0.5);
}
.list .item switch {
  flex-shrink: 1;
}
.list .item text {
  padding: 0 10px;
  flex-grow: 1;
  flex-shrink: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list-done .item {
  color: #bbb;
}
.list .btn-remove {
  flex-shrink: 0;
  display: flex;
  align-items: center;
}
.list image.remove {
  width: 48rpx;
  height: 48rpx;
}
