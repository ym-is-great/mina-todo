/* pages/index/index.wxss */

page {
    color: #333;
    padding-bottom: 200rpx;
}

.top-bar {
    background: #4caf50;
    padding: 80rpx 30rpx;
    position: relative;
}
.top-bar input {
    background: #fff;
    width: 100%;
    font-size: 36rpx;
    height: 80rpx;
    padding: 0 40rpx;
    margin: 0 auto;
    border-radius: 100rpx;
    text-align: center;
    box-sizing: border-box;
}
.top-bar .input-placeholder {
    color: #bdbdbd;
}


.empty {
    text-align: center;
    margin-top: 200rpx;
}
.empty text {
    vertical-align: middle;
}
.list .item {
    height: 120rpx;
    line-height: 120rpx;
    padding: 0 30rpx;
    border-bottom: 1px solid #f2f2f2;
    position: relative;
}
.list .item switch {
    margin-right: 20rpx;
}
.done .item {
    color: #bbbbbb;
}
.list image.remove {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}