/* pages/index/index.wxss */


.top-bar {
    background: #4caf50;
    padding: 80rpx 50rpx;
    position: relative;
}
.top-bar input {
    background: #fff;
    font-size: 36rpx;
     width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 100rpx;
    margin: 0 auto;
    border-radius: 100rpx;
    text-align: center;
    box-sizing: border-box;
}
.top-bar image.add {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 80rpx;
    top: 50%;
    transform: translateY(-50%);
    z-index: 88;
}


.empty {
    text-align: center;
    margin-top: 200rpx;
}
.empty image.smile {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}
.empty text {
    vertical-align: middle;
}
.list .item {
    height: 120rpx;
    line-height: 120rpx;
    padding: 0 30rpx;
    border-bottom: 1px solid #e6e6e6;
    position: relative;
}
.list .item checkbox {
    margin-right: 20rpx;
}
.done .item {
    color: #bbbbbb;
}
.list image.remove {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}