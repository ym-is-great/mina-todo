/* pages/index/index.wxss */

page {
    padding-top: 220rpx;
}

.top-bar {
    width: 100%;
    height: 220rpx;
    background: #4caf50;
    padding: 0 60rpx;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 88;
}
.top-bar input {
    background: #fff;
    width: 600rpx;
    font-size: 36rpx;
    height: 80rpx;
    margin: 0 auto;
    border-radius: 100rpx;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.top-bar .input-placeholder {
    color: #bdbdbd;
}


.empty {
    text-align: center;
    margin-top: 200rpx;
}
.empty text {
    font-size: 28rpx;
    vertical-align: middle;
}
.empty image.tea {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.list .item {
    height: 120rpx;
    line-height: 120rpx;
    padding: 0 30rpx;
    border-bottom: 1px solid #f2f2f2;
    position: relative;
}
.list .item switch {
    margin-right: 20rpx;
}
.done .item {
    color: #999;
}
.list image.remove {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}