/* pages/index/index.wxss */

page {
    padding-top: 220rpx;
    color: #333;
}

.top-bar {
    width: 100%;
    height: 220rpx;
    background: #4caf50;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 88;
}
.top-bar .input-block {
    width: 560rpx;
    height: 70rpx;
    background: #fff;
    font-size: 32rpx;
    margin: 0 auto;
    border-radius: 100rpx;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.top-bar text.placeholder {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s;
}
.top-bar text.placeholder.focus {
    color: #fff;
}
.top-bar input {
    color: #333;
    width: 100%;
    height: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    position: absolute;
    z-index: 88;
}
.empty {
    text-align: center;
    margin-top: 200rpx;
}
.empty text {
    font-size: 28rpx;
    vertical-align: middle;
}
.empty image.tea {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.list .item {
    height: 120rpx;
    line-height: 120rpx;
    position: relative;
}
.list .item::after {
    position: absolute;
    content: '';
    width: 100%;
    left: 0;
    bottom: 0;
    height: 1px;
    background: #dddddd;
    transform: scaleY(0.5);
}
.list .item switch {
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}
.list .item text {
    display: inline-block;
    margin-left: 110rpx;
    width: 480rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.list-done .item {
    color: #bbbbbb;
}
.list .btn-remove {
    width: 50rpx;
    height: 100%;
    position: absolute;
    right: 0;
    top: 0;
    padding: 0 30rpx;
}
.list image.remove {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}