<!--pages/index/index.wxml-->

<!-- 顶栏 -->
<view class="top-bar">
    <input
        value="{{ newItem }}"
        maxlength="16"
        placeholder="请输入待办事项"
        bindinput="inputItem"
        bindconfirm="addItem"/>
</view>

<!-- 无事项 -->
<view class="empty" wx:if="{{ items.length == 0 }}">
    <image class="tea" src="/images/icon_tea_colorful.png"></image>
    <text>久在樊笼里，复得返自然。 </text>
</view>

<!-- 未做事项 -->
<view class="list">
    <view class="item" wx:for="{{ items }}" wx:key="{{ index }}" wx:if="{{ !item.completed }}">
        <switch
            type="checkbox"
            checked="{{ false }}"
            data-index="{{ index }}"
            bindtap="checkItem"/>
        <text>{{item.content}}</text>
        <image
            class="remove"
            src="/images/icon_remove_circle_light_gray.png"
            bindtap="removeItem"></image>
    </view>
</view>

<!-- 已完成事项 -->
<view class="list done">
    <view class="item" wx:for="{{ items }}" wx:key="{{ index }}" wx:if="{{ item.completed }}">
        <switch
            type="checkbox"
            checked="{{ true }}"
            data-index="{{ index }}"
            bindtap="checkItem"/>
        <text>{{ item.content }}</text>
        <image
            class="remove"
            src="/images/icon_remove_circle_light_gray.png"
            bindtap="removeItem"></image>
    </view>
</view>